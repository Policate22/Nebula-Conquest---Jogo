    <style type="text/tailwindcss">
        @layer utilities {
            .text-stroke {
                -webkit-text-stroke: 1px #3b82f6;
                text-stroke: 1px #3b82f6;
            }
            .text-stroke-thick {
                -webkit-text-stroke: 2px #3b82f6;
                text-stroke: 2px #3b82f6;
            }
